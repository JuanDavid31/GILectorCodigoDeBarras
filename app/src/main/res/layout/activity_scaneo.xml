<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lector.gi.unibague.gilectorcodigodebarras.EscaneoActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_texto_escaneo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Escanea el codigo del producto"
        app:layout_constraintTop_toTopOf="parent" />

    <SurfaceView
        android:id="@+id/sv_escaneo_camara"
        android:layout_width="match_parent"
        android:layout_height="524dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_texto_escaneo"
        tools:layout_editor_absoluteX="16dp" />

</LinearLayout>
